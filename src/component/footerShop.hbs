<div class='mb-5 mt-5'>
  {{#each footer}}
    <div class='row g-2'>
      <div class='nav nav'>
        {{#each this}}
          <div class='col-2 ms-2'>
            <div class='nav-item me-3'>
              <a class='nav-link'
                href='{{link}}'>
                {{text}}
              </a>
            </div>
          </div>
        {{/each}}
      <div class='col-3 ms-3'>
        <div class='nav-item'>
          <a class='nav-link disabled'
            href='#'>
            Disabled
          </a>
        </div>
      </div> 
    </div>   
  {{/each}}
</div>