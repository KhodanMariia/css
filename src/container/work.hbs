{{!--
Це код container файлу для work сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
--}}

<div>
    {{#with main}}
    <main class="row">
        <section class="ms-5">
            {{>title data='Work history' big=true}}
            <div>
                <ul >
                    {{#each works}}
                    <li class="m-3">
                        <div class="p-3">{{position}}</div>
                        <div class="p-3">
                            {{duration.from}}-
                            {{#if duration.to}}{{duration.to}}
                            {{else}}
                            (досі працюю)
                            {{/if}}
                        </div>

                        <div class="mb-3 p-3">
                            {{#unless company.url}}
                            <b>{{company.name}}</b>
                            {{else}}
                            {{>link text=company.name href=company.url blanc=true noLine=true }}
                            {{/unless}}
                        </div>

                        <div class="p-3">
                            <strong>
                                Projects ({{projectAmount}})
                            </strong>
                        </div>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link text=name href=url blanc=true noLine=true }}</div>
                                <div class="p-1">
                                    <p> {{about}}</p>
                                </div>
                                <div>
                                    <em>
                                        <u>
                                            Project stacks({{stackAmoGnt}})
                                        </u>
                                    </em>
                                </div>
                                
                                <div>
                                    {{#each stacks}}
                                    <ul>
                                        <li class="p-1">{{name}}</li>
                                    </ul>
                                    {{/each}}
                                </div>
                                <div class="mt-3">
                                    <em>
                                        <u>
                                            Project awards({{awardAmoGnt}})
                                        </u>
                                    </em>
                                </div>
                                <div>
                                    {{#each awards}}
                                    <ul>
                                        <li class="p-1">
                                            {{name}}
                                        </li>
                                    </ul>
                                    {{/each}}
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

