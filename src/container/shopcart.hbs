<main class='m-5'>
  <section>
    <div class='card mt-3'>
      {{#with navigation}}
        <div class='row'>
          <div class='col-12'>
            <div class='nav nav-tabs'>
              {{#each links}}
                <div class='nav-item'>
                  <a
                    href='{{href}}'
                    class='nav-link'
                  >{{text}}</a>
                </div>
              {{/each}}
              <div class='nav-item'>
                <a
                  href='#'
                  class='nav-link disabled'
                >Disabled</a>
              </div>
            </div>
          </div>
        </div>
      {{/with}}
    </div>
  </section>
  <section>
    <div class='mt-4'>
      {{#with header}}
        <h1>{{title}}</h1>
        <div class='mt-3'>
          {{#with button}}
            <button
              class='btn btn-outline-secondary mb-2'
              src='{{link}}'
            >
              {{text}}
            </button>
          {{/with}}
        </div>
      {{/with}}
    </div>
  </section>
   <div>
    <hr>
  </div>
  <section>
   {{>cartGoodsItem}} 
  </section>
    <div>
    <hr>
  </div>
  <section>
    <div>
      {{#with total}}
      <h2>{{title}}</h2>
      <h1>{{amount}}</h1>
      <p>{{delivery}}</p>
      <div>
        {{#each buttons}}
         {{>isSuccess}}
        {{/each}}
      </div>
      {{/with}}
    </div>
  </section>
  <div>
    <hr>
  </div>
  <section>
    <div>
      {{#with goodsOtherBlock}}
        <h1 class='text-center'>{{title}}</h1>
        <div class='row g-4 mt-3'>
          {{#each cards}}
           <div class='col-4'>
              <div class="nav flex-column">
                <div class="nav-item">
                  <div class='card text-bg-secondary'>
                     <img
                    class='card-img-top'
                    src='{{image}}' 
                    />
                    <div class='card-body m-1'>
                        <div class='card-header'>{{title}}
                          {{>spanHot}} 
                        </div>
                        <p>{{description}}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </div>
  </section>
   <div>
    <hr>
  </div>
  <section>
  <div class="card text-bg-dark mt-3 mb-3">
        {{#with subscribe}}
        <div class='card-body'>
         <h2>{{header}}</h2>
         <p>{{description}}</p>
         {{#each buttons}}
         <button class='bg-primary mb-2' src='{{link}}'>
            {{text}}
        </button>
        <br>
         {{/each}}
        </div>
        {{/with}}
    </div>
  </section>
  <div>
    <hr>
  </div>
</main>
<footer>
  <section>
    {{>footerShop}}
  </section>
</footer> 