  <div class="card-body">
    {{#with audio}}
               <h5 class="card-title">audio:</h5>
               <p class="card-text">
                  system({{system}}),  
                  speakers({{speakers}}),
                  subwoofer({{subwoofer}}),
                  bluetooth({{bluetooth}}),
                  USB({{USB}})
                  </p>
           {{/with}}
  </div>
</div>
{{/with}}
{{#with exterior}}
<div class="card text-bg-info mb-3" style="max-width: 18rem;">
  <div class="card-header">{{../../model}}({{../../year}})</div>
  <div class="card-body">
      {{#with headlights}}
            <h5 class="card-title">headlights</h5>
               <p class="card-text">
                  type({{type}}),
                   brightness({{brightness}}),
                   automatic({{automatic}})
                </p>
        {{/with}}
  </div>
</div>

<div class="card text-bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header">{{../../model}}({{../../year}})</div>
  <div class="card-body">
     {{#with wheels}}
                <h5 class="card-title">wheels</h5>
                <p class="card-text">
                   size({{size}}),
                   type({{type}}),
                   color({{color}})
                </p>
    {{/with}}
  </div>
</div>
<div class="card text-bg-dark mb-3" style="max-width: 18rem;">
  <div class="card-header">{{../../model}}({{../../year}})</div>
  <div class="card-body">
    {{#with sunroof}}
        <h5 class="card-title">sunroof</h5>
            <p class="card-text">
                type({{type}}),
                size({{size}}),
                automatic({{automatic}})
            </p>
    {{/with}}
  </div>
</div>
{{/with}}
{{/with}}