<main class='m-5'>
    <section>
        <div class='m-3'>
            {{#with navigation}}
            <div class='row'>
                <div class='card col-12'>
                <div class='nav nav-tabs'>
                    {{#each links}}
                    <div class='nav-item'>
                        <a
                        href='{{href}}'
                        class='nav-link'
                        >{{text}}</a>
                    </div>
                    {{/each}}
                    <div class='nav-item'>
                        <a
                        href='{{href}}'
                        class='nav-link disabled'
                        >Disabled</a>
                    </div>
                </div>
                </div>
            </div>
            {{/with}}
        </div>
    </section>
    <section>
        <div class='row me-2'>
            <div class='col-12'>
                <div class='nav nav'>
                    {{#with formBlock}}
                        <div class='col-9'>
                          <div>
                            <h1>{{header}}</h1>
                            <p class='mt-3'>
                                {{rating.title}}: 
                                {{rating.value}}
                            </p>
                          </div>
                          <div class='mt-4'>
                            {{#with actionBlock}}
                            <div class='nav nav-tabs'>
                                {{#each tabs}}
                                <div class='nav-items col-4'>
                                    <a class='nav-link
                                     {{#if isActive}} active {{/if}}'>
                                     {{text}}
                                     </a>
                                </div>  
                                {{/each}}
                             </div> 
                             <div class='mt-5 mb-5'>
                                <hr>
                             </div>
                             <div class='card'>
                                {{#with report}}
                                <div class='card-body'>
                                    <p>{{title}}</p>
                                    <div>
                                        {{#with button}}
                                        <a class='btn btn-secondary'
                                           href='{{link}}'>
                                           {{text}}
                                        </a>
                                        {{/with}}
                                    </div>
                                </div>
                                {{/with}}
                             </div> 
                            {{/with}}
                          </div>
                           <div class='mt-5 mb-5'>
                               <hr>
                            </div>
                            <div>
                                {{#with feedbackBlock}}
                                <div>
                                    <h1>{{title}}</h1>
                                </div>
                                <div class='nav nav mt-5'>
                                    {{#each buttons}}
                                        {{#if isWarning}}
                                        <div class='nav-items me-2'>
                                            <a class='btn btn-warning'
                                            href='{{link}}'>
                                            {{text}}
                                            </a>
                                        </div>  
                                        {{else}}
                                            {{#if isSuccess}}
                                            <div class='nav-items me-2'>
                                            <a class='btn btn-success'
                                                href='{{link}}'> 
                                                {{text}}
                                            </a>
                                            </div>  
                                            {{else}}
                                            <div class='nav-items'>
                                            <a class='btn btn-danger'
                                                href='{{link}}'>
                                                {{text}}
                                            </a>
                                            </div>  
                                            {{/if}}
                                        {{/if}}
                                    {{/each}}
                                </div>
                                {{/with}}
                                 <div class='mt-5 mb-5'>
                                   <hr>
                                </div>
                            </div>
                       </div>
                       <div class='col-3'>
                        {{#with goodsInfo}}
                            <div class='card p-3 ms-3'>
                                <div>
                                    <img class='' src='{{photo}}'>
                                </div>
                                <br>
                                <b>{{name}}</b>
                            </div>
                            <div class='card ms-3 mt-3'>
                                <div class='card-body'>
                                    <h3>{{price}}</h3>
                                    <p>{{inMarket}}</p>
                                    {{#each buttons}}
                                         {{#if isPrimary}}
                                            <div class='nav-items mb-2'>
                                            <a class='btn btn-primary sm'
                                                href='{{link}}'> 
                                                {{text}}
                                            </a>
                                            </div>  
                                            {{else}}
                                            <div class='nav-items'>
                                            <a class='btn btn-secondary'
                                                href='{{link}}'>
                                                {{text}}
                                            </a>
                                            </div>  
                                            {{/if}}
                                    {{/each}}
                                </div>
                            </div>
                            <div class='card p-3 mt-3 ms-3'>
                                {{#with seller}}
                                <p>
                                    {{title}}:
                                    <b>{{value}}</b>
                                </p>
                                {{/with}}
                            </div>
                        {{/with}}
                        </div>
                   {{/with}}
                   <div class='col-9'>
                        {{#each reviewList}}
                        <div class='card'>
                            <div class='card-body'>
                                {{>reviewItem}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <div class='card col-9 mt-3 text-bg-success text-center'>
                        {{#with service}}
                           <div class='card-body'>
                               <h1>{{title}}</h1>
                               <p>{{description}}</p>
                               {{#each buttons}}
                                  <a class='btn btn-primary' href='{{link}}'>
                                    {{text}}
                                  </a>
                               {{/each}}
                           </div>
                        {{/with}}
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
 <div class='mt-5 mb-5'>
  <hr>
</div>
<footer>
    {{>footerShop}}
</footer>